<resources>

    <!-- Base application theme. -->
    <!-- Base application theme. -->

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
    </style>

    <!-- Main activity theme. -->
    <style name="RootActivityTheme" parent="AppTheme">
        <item name="actionBarStyle">@style/ActionBar.Solid.PopularMovies.NoTitle</item>
    </style>

    <!-- main activity action bar styles -->
    <style name="ActionBar.Solid.PopularMovies.NoTitle" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="displayOptions">useLogo|showTitle</item>
        <item name="logo">@drawable/ic_logo</item>
    </style>

    <!-- Settings activity theme. -->
    <style name="SettingsTheme" parent="AppTheme">
    </style>

    <style name="TrailerItemListStyle">
        <item name="android:choiceMode">singleChoice</item>
    </style>

</resources>
